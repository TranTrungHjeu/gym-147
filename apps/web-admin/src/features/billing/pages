import React, { useEffect, useState } from 'react';
import {
  CreditCard,
  DollarSign,
  Package,
  Users,
  Clock,
} from 'lucide-react';
import { Button, Card, IconBadge } from '../components';

interface MembershipPlan {
  id: string;
  name: string;
  type: string;
  price: number;
  duration_months: number;
  is_active: boolean;
  description?: string;
  benefits: string[];
}

interface Subscription {
  id: string;
  member_id: string;
  status: string;
  start_date: string;
  end_date: string;
  total_amount: number;
  plan: MembershipPlan;
}

interface Payment {
  id: string;
  member_id: string;
  amount: number;
  status: string;
  payment_method: string;
  created_at: string;
  subscription?: Subscription;
}

interface BillingStats {
  totalPlans: number;
  activeSubscriptions: number;
  totalRevenue: number;
  pendingPayments: number;
}

export default function Billing() {
  const [activeTab, setActiveTab] = useState<'dashboard' | 'plans' | 'subscriptions' | 'payments'>(
    'dashboard'
  );
  const [plans, setPlans] = useState<MembershipPlan[]>([]);
  const [subscriptions, setSubscriptions] = useState<Subscription[]>([]);
  const [payments, setPayments] = useState<Payment[]>([]);
  const [stats, setStats] = useState<BillingStats>({
    totalPlans: 0,
    activeSubscriptions: 0,
    totalRevenue: 0,
    pendingPayments: 0,
  });
  // const [loading, setLoading] = useState(false);
  // const [error, setError] = useState('');

  // Fetch data functions
  const fetchStats = async () => {
    try {
      const response = await fetch('/api/billing/stats');
      const data = await response.json();
      if (data.success) {
        setStats(data.data);
      }
    } catch (error) {
      console.error('Failed to fetch stats:', error);
    }
  };

  const fetchPlans = async () => {
    try {
      const response = await fetch('/api/billing/plans');
      const data = await response.json();
      if (data.success) {
        setPlans(data.data);
      }
    } catch (error) {
      console.error('Failed to fetch plans:', error);
    }
  };

  const fetchSubscriptions = async () => {
    try {
      const response = await fetch('/api/billing/subscriptions');
      const data = await response.json();
      if (data.success) {
        setSubscriptions(data.data);
      }
    } catch (error) {
      console.error('Failed to fetch subscriptions:', error);
    }
  };

  const fetchPayments = async () => {
    try {
      const response = await fetch('/api/billing/payments');
      const data = await response.json();
      if (data.success) {
        setPayments(data.data);
      }
    } catch (error) {
      console.error('Failed to fetch payments:', error);
    }
  };

  useEffect(() => {
    fetchStats();
    if (activeTab === 'plans') fetchPlans();
    if (activeTab === 'subscriptions') fetchSubscriptions();
    if (activeTab === 'payments') fetchPayments();
  }, [activeTab]);

  const formatCurrency = (amount: number) => {
    return new Intl.NumberFormat('vi-VN', {
      style: 'currency',
      currency: 'VND',
    }).format(amount);
  };

  const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString('vi-VN');
  };

  return (
    <div className='space-y-8 text-brand-50'>
      <div className='flex flex-col justify-between gap-4 sm:flex-row sm:items-center'>
        <div>
          <div className='flex items-center gap-3'>
            <IconBadge icon={CreditCard} tone='brand' />
            <h1 className='text-3xl font-semibold tracking-wide'>Quản lý thanh toán</h1>
          </div>
          <p className='mt-2 text-sm text-ink-300'>Theo dõi gói tập, đăng ký và lịch sử thanh toán.</p>
        </div>
      </div>

      {/* Tab Navigation */}
      <Card className='border border-white/10'>
        <div className='flex gap-2'>
          {[
            { key: 'dashboard', label: 'Dashboard', icon: DollarSign },
            { key: 'plans', label: 'Gói tập', icon: Package },
            { key: 'subscriptions', label: 'Đăng ký', icon: Users },
            { key: 'payments', label: 'Thanh toán', icon: CreditCard },
          ].map(tab => (
            <button
              key={tab.key}
              onClick={() => setActiveTab(tab.key as any)}
              className={`flex items-center gap-2 rounded-xl px-4 py-2 text-sm font-semibold transition-all duration-200 ${
                activeTab === tab.key
                  ? 'bg-brand-500/20 text-brand-100 border border-brand-500/40'
                  : 'text-ink-300 hover:text-brand-50 hover:bg-white/5'
              }`}
            >
              <tab.icon className='h-4 w-4' strokeWidth={1.6} />
              {tab.label}
            </button>
          ))}
        </div>
      </Card>

      {/* Dashboard Tab */}
      {activeTab === 'dashboard' && (
        <div className='grid grid-cols-1 gap-5 md:grid-cols-2 xl:grid-cols-4'>
          <Card className='border border-white/10'>
            <div className='flex items-center justify-between'>
              <div>
                <p className='text-sm uppercase tracking-wide text-ink-400'>Tổng gói tập</p>
                <p className='mt-3 text-3xl font-semibold text-brand-50'>{stats.totalPlans}</p>
              </div>
              <IconBadge icon={Package} tone='brand' />
            </div>
          </Card>

          <Card className='border border-white/10'>
            <div className='flex items-center justify-between'>
              <div>
                <p className='text-sm uppercase tracking-wide text-ink-400'>Đăng ký hoạt động</p>
                <p className='mt-3 text-3xl font-semibold text-emerald-300'>{stats.activeSubscriptions}</p>
              </div>
              <IconBadge icon={Users} tone='success' />
            </div>
          </Card>

          <Card className='border border-white/10'>
            <div className='flex items-center justify-between'>
              <div>
                <p className='text-sm uppercase tracking-wide text-ink-400'>Tổng doanh thu</p>
                <p className='mt-3 text-2xl font-semibold text-emerald-300'>{formatCurrency(stats.totalRevenue)}</p>
              </div>
              <IconBadge icon={DollarSign} tone='success' />
            </div>
          </Card>

          <Card className='border border-white/10'>
            <div className='flex items-center justify-between'>
              <div>
                <p className='text-sm uppercase tracking-wide text-ink-400'>Thanh toán chờ</p>
                <p className='mt-3 text-3xl font-semibold text-amber-300'>{stats.pendingPayments}</p>
              </div>
              <IconBadge icon={Clock} tone='warning' />
            </div>
          </Card>
        </div>
      )}

      {/* Plans Tab */}
      {activeTab === 'plans' && (
        <Card className='border border-white/10'>
          <div className='flex items-center justify-between mb-6'>
            <h2 className='text-xl font-semibold text-brand-50'>Quản lý gói tập</h2>
            <Button variant='primary'>
              <Package className='h-4 w-4' strokeWidth={1.6} />
              Thêm gói tập mới
            </Button>
          </div>

          <div className='overflow-x-auto'>
            <table className='min-w-full divide-y divide-white/5 text-sm'>
              <thead>
                <tr className='text-left text-xs uppercase tracking-[0.2em] text-ink-400'>
                  <th className='px-6 py-4'>Tên gói</th>
                  <th className='px-6 py-4'>Loại</th>
                  <th className='px-6 py-4'>Thời hạn</th>
                  <th className='px-6 py-4'>Giá</th>
                  <th className='px-6 py-4'>Trạng thái</th>
                  <th className='px-6 py-4 text-right'>Thao tác</th>
                </tr>
              </thead>
              <tbody className='divide-y divide-white/5 text-ink-200'>
                {plans.map(plan => (
                  <tr key={plan.id} className='transition-colors duration-200 hover:bg-brand-500/5'>
                    <td className='px-6 py-4'>
                      <div className='font-semibold text-brand-50'>{plan.name}</div>
                      <div className='text-xs text-ink-400'>{plan.description}</div>
                    </td>
                    <td className='px-6 py-4'>{plan.type}</td>
                    <td className='px-6 py-4'>{plan.duration_months} tháng</td>
                    <td className='px-6 py-4 font-semibold text-emerald-300'>{formatCurrency(plan.price)}</td>
                    <td className='px-6 py-4'>
                      <span className={`inline-flex rounded-full border px-3 py-1 text-xs font-semibold ${
                        plan.is_active
                          ? 'border-emerald-500/40 bg-emerald-500/10 text-emerald-200'
                          : 'border-red-500/40 bg-red-500/10 text-red-300'
                      }`}>
                        {plan.is_active ? 'Hoạt động' : 'Tạm dừng'}
                      </span>
                    </td>
                    <td className='px-6 py-4 text-right'>
                      <div className='flex items-center justify-end gap-2'>
                        <Button variant='outline' size='sm'>
                          Sửa
                        </Button>
                        <Button variant='danger' size='sm'>
                          Xóa
                        </Button>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </Card>
      )}

      {/* Subscriptions Tab */}
      {activeTab === 'subscriptions' && (
        <Card className='border border-white/10'>
          <h2 className='mb-6 text-xl font-semibold text-brand-50'>Quản lý đăng ký</h2>

          <div className='overflow-x-auto'>
            <table className='min-w-full divide-y divide-white/5 text-sm'>
              <thead>
                <tr className='text-left text-xs uppercase tracking-[0.2em] text-ink-400'>
                  <th className='px-6 py-4'>Thành viên</th>
                  <th className='px-6 py-4'>Gói tập</th>
                  <th className='px-6 py-4'>Trạng thái</th>
                  <th className='px-6 py-4'>Bắt đầu</th>
                  <th className='px-6 py-4'>Kết thúc</th>
                  <th className='px-6 py-4'>Tổng tiền</th>
                  <th className='px-6 py-4 text-right'>Thao tác</th>
                </tr>
              </thead>
              <tbody className='divide-y divide-white/5 text-ink-200'>
                {subscriptions.map(sub => (
                  <tr key={sub.id} className='transition-colors duration-200 hover:bg-brand-500/5'>
                    <td className='px-6 py-4 font-mono text-xs text-ink-400'>#{sub.member_id}</td>
                    <td className='px-6 py-4 text-brand-50'>{sub.plan.name}</td>
                    <td className='px-6 py-4'>
                      <span className={`inline-flex rounded-full border px-3 py-1 text-xs font-semibold ${
                        sub.status === 'ACTIVE'
                          ? 'border-emerald-500/40 bg-emerald-500/10 text-emerald-200'
                          : sub.status === 'CANCELLED'
                            ? 'border-red-500/40 bg-red-500/10 text-red-300'
                            : 'border-amber-500/40 bg-amber-500/10 text-amber-200'
                      }`}>
                        {sub.status}
                      </span>
                    </td>
                    <td className='px-6 py-4 text-sm text-ink-300'>{formatDate(sub.start_date)}</td>
                    <td className='px-6 py-4 text-sm text-ink-300'>{formatDate(sub.end_date)}</td>
                    <td className='px-6 py-4 font-semibold text-emerald-300'>{formatCurrency(sub.total_amount)}</td>
                    <td className='px-6 py-4 text-right'>
                      {sub.status === 'ACTIVE' && (
                        <Button variant='danger' size='sm'>
                          Hủy
                        </Button>
                      )}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </Card>
      )}

      {/* Payments Tab */}
      {activeTab === 'payments' && (
        <Card className='border border-white/10'>
          <h2 className='mb-6 text-xl font-semibold text-brand-50'>Lịch sử thanh toán</h2>

          <div className='overflow-x-auto'>
            <table className='min-w-full divide-y divide-white/5 text-sm'>
              <thead>
                <tr className='text-left text-xs uppercase tracking-[0.2em] text-ink-400'>
                  <th className='px-6 py-4'>Mã thanh toán</th>
                  <th className='px-6 py-4'>Thành viên</th>
                  <th className='px-6 py-4'>Số tiền</th>
                  <th className='px-6 py-4'>Phương thức</th>
                  <th className='px-6 py-4'>Trạng thái</th>
                  <th className='px-6 py-4'>Ngày</th>
                </tr>
              </thead>
              <tbody className='divide-y divide-white/5 text-ink-200'>
                {payments.map(payment => (
                  <tr key={payment.id} className='transition-colors duration-200 hover:bg-brand-500/5'>
                    <td className='px-6 py-4 font-mono text-xs text-ink-400'>#{payment.id.substring(0, 8)}...</td>
                    <td className='px-6 py-4 font-mono text-xs text-ink-400'>#{payment.member_id}</td>
                    <td className='px-6 py-4 font-semibold text-emerald-300'>{formatCurrency(payment.amount)}</td>
                    <td className='px-6 py-4'>{payment.payment_method}</td>
                    <td className='px-6 py-4'>
                      <span className={`inline-flex rounded-full border px-3 py-1 text-xs font-semibold ${
                        payment.status === 'COMPLETED'
                          ? 'border-emerald-500/40 bg-emerald-500/10 text-emerald-200'
                          : payment.status === 'FAILED'
                            ? 'border-red-500/40 bg-red-500/10 text-red-300'
                            : 'border-amber-500/40 bg-amber-500/10 text-amber-200'
                      }`}>
                        {payment.status}
                      </span>
                    </td>
                    <td className='px-6 py-4 text-sm text-ink-300'>{formatDate(payment.created_at)}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </Card>
      )}
    </div>
  );
}
