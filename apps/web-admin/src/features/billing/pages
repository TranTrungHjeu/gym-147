import React, { useEffect, useState } from 'react';
import {
  CreditCard,
  DollarSign,
  Package,
  Users,
  Clock,
  BarChart3,
} from 'lucide-react';
import { Button, Card, IconBadge } from '../components';
import { AnalyticsDashboard } from '../components/AnalyticsDashboard';
import { RevenueReports } from '../components/RevenueReports';
import { MemberAnalytics } from '../components/MemberAnalytics';

interface MembershipPlan {
  id: string;
  name: string;
  type: string;
  price: number;
  duration_months: number;
  is_active: boolean;
  description?: string;
  benefits: string[];
}

interface Subscription {
  id: string;
  member_id: string;
  status: string;
  start_date: string;
  end_date: string;
  total_amount: number;
  plan: MembershipPlan;
}

interface Payment {
  id: string;
  member_id: string;
  amount: number;
  status: string;
  payment_method: string;
  created_at: string;
  subscription?: Subscription;
}

interface BillingStats {
  totalPlans: number;
  activeSubscriptions: number;
  totalRevenue: number;
  pendingPayments: number;
}

export default function Billing() {
  const [activeTab, setActiveTab] = useState<
    'dashboard' | 'analytics' | 'revenue' | 'members' | 'plans' | 'subscriptions' | 'payments'
  >('dashboard');
  const [plans, setPlans] = useState<MembershipPlan[]>([]);
  const [subscriptions, setSubscriptions] = useState<Subscription[]>([]);
  const [payments, setPayments] = useState<Payment[]>([]);
  const [stats, setStats] = useState<BillingStats>({
    totalPlans: 0,
    activeSubscriptions: 0,
    totalRevenue: 0,
    pendingPayments: 0,
  });
  // const [loading, setLoading] = useState(false);
  // const [error, setError] = useState('');

  // Fetch data functions
  const fetchStats = async () => {
    try {
      const response = await fetch('/api/billing/stats');
      const data = await response.json();
      if (data.success) {
        setStats(data.data);
      }
    } catch (error) {
      console.error('Failed to fetch stats:', error);
    }
  };

  const fetchPlans = async () => {
    try {
      const response = await fetch('/api/billing/plans');
      const data = await response.json();
      if (data.success) {
        setPlans(data.data);
      }
    } catch (error) {
      console.error('Failed to fetch plans:', error);
    }
  };

  const fetchSubscriptions = async () => {
    try {
      const response = await fetch('/api/billing/subscriptions');
      const data = await response.json();
      if (data.success) {
        setSubscriptions(data.data);
      }
    } catch (error) {
      console.error('Failed to fetch subscriptions:', error);
    }
  };

  const fetchPayments = async () => {
    try {
      const response = await fetch('/api/billing/payments');
      const data = await response.json();
      if (data.success) {
        setPayments(data.data);
      }
    } catch (error) {
      console.error('Failed to fetch payments:', error);
    }
  };

  useEffect(() => {
    fetchStats();
    if (activeTab === 'plans') fetchPlans();
    if (activeTab === 'subscriptions') fetchSubscriptions();
    if (activeTab === 'payments') fetchPayments();
  }, [activeTab]);

  const formatCurrency = (amount: number) => {
    return new Intl.NumberFormat('vi-VN', {
      style: 'currency',
      currency: 'VND',
    }).format(amount);
  };

  const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString('vi-VN');
  };

  return (
    <div className='space-y-8 text-text-primary'>
      <div className='flex flex-col justify-between gap-4 sm:flex-row sm:items-center'>
        <div>
          <div className='flex items-center gap-3'>
            <IconBadge icon={CreditCard} tone='brand' />
            <h1
              className='text-3xl font-bold tracking-wide text-text-primary'
              style={{ fontFamily: 'Space Grotesk, sans-serif' }}
            >
              Quản lý thanh toán
            </h1>
          </div>
          <p
            className='mt-2 text-sm font-medium text-text-secondary'
            style={{ fontFamily: 'Inter, sans-serif' }}
          >
            Theo dõi gói tập, đăng ký và lịch sử thanh toán.
          </p>
        </div>
      </div>

      {/* Tab Navigation */}
      <Card className='border border-white/10 bg-surface-800/50 backdrop-blur-sm'>
        <div className='flex gap-2'>
          {[
            { key: 'dashboard', label: 'Dashboard', icon: DollarSign },
            { key: 'analytics', label: 'Analytics', icon: BarChart3 },
            { key: 'revenue', label: 'Báo cáo doanh thu', icon: DollarSign },
            { key: 'members', label: 'Phân tích thành viên', icon: Users },
            { key: 'plans', label: 'Gói tập', icon: Package },
            { key: 'subscriptions', label: 'Đăng ký', icon: Users },
            { key: 'payments', label: 'Thanh toán', icon: CreditCard },
          ].map(tab => (
            <button
              key={tab.key}
              onClick={() => setActiveTab(tab.key as any)}
              className={`flex items-center gap-2 rounded-xl px-4 py-2 text-sm font-semibold transition-all duration-200 ${
                activeTab === tab.key
                  ? 'bg-brand-500/20 text-brand-200 border border-brand-500/40 shadow-sm'
                  : 'text-text-secondary hover:text-text-primary hover:bg-surface-700/30'
              }`}
              style={{ fontFamily: 'Inter, sans-serif' }}
            >
              <tab.icon className='h-4 w-4' strokeWidth={1.6} />
              {tab.label}
            </button>
          ))}
        </div>
      </Card>

      {/* Dashboard Tab */}
      {activeTab === 'dashboard' && (
        <div className='grid grid-cols-1 gap-5 md:grid-cols-2 xl:grid-cols-4'>
          <Card className='border border-white/10 bg-surface-800/50 backdrop-blur-sm'>
            <div className='flex items-center justify-between'>
              <div className='flex-1'>
                <p
                  className='text-xs font-medium uppercase tracking-wider text-text-muted'
                  style={{ fontFamily: 'Inter, sans-serif' }}
                >
                  Tổng gói tập
                </p>
                <p
                  className='mt-3 text-3xl font-bold text-text-primary'
                  style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                >
                  {stats.totalPlans}
                </p>
              </div>
              <IconBadge icon={Package} tone='brand' />
            </div>
          </Card>

          <Card className='border border-white/10 bg-surface-800/50 backdrop-blur-sm'>
            <div className='flex items-center justify-between'>
              <div className='flex-1'>
                <p
                  className='text-xs font-medium uppercase tracking-wider text-text-muted'
                  style={{ fontFamily: 'Inter, sans-serif' }}
                >
                  Đăng ký hoạt động
                </p>
                <p
                  className='mt-3 text-3xl font-bold text-color-success'
                  style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                >
                  {stats.activeSubscriptions}
                </p>
              </div>
              <IconBadge icon={Users} tone='success' />
            </div>
          </Card>

          <Card className='border border-white/10 bg-surface-800/50 backdrop-blur-sm'>
            <div className='flex items-center justify-between'>
              <div className='flex-1'>
                <p
                  className='text-xs font-medium uppercase tracking-wider text-text-muted'
                  style={{ fontFamily: 'Inter, sans-serif' }}
                >
                  Tổng doanh thu
                </p>
                <p
                  className='mt-3 text-2xl font-bold text-color-success'
                  style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                >
                  {formatCurrency(stats.totalRevenue)}
                </p>
              </div>
              <IconBadge icon={DollarSign} tone='success' />
            </div>
          </Card>

          <Card className='border border-white/10 bg-surface-800/50 backdrop-blur-sm'>
            <div className='flex items-center justify-between'>
              <div className='flex-1'>
                <p
                  className='text-xs font-medium uppercase tracking-wider text-text-muted'
                  style={{ fontFamily: 'Inter, sans-serif' }}
                >
                  Thanh toán chờ
                </p>
                <p
                  className='mt-3 text-3xl font-bold text-color-warning'
                  style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                >
                  {stats.pendingPayments}
                </p>
              </div>
              <IconBadge icon={Clock} tone='warning' />
            </div>
          </Card>
        </div>
      )}

      {/* Analytics Tab */}
      {activeTab === 'analytics' && <AnalyticsDashboard period={30} />}

      {/* Revenue Reports Tab */}
      {activeTab === 'revenue' && <RevenueReports period={30} />}

      {/* Member Analytics Tab */}
      {activeTab === 'members' && <MemberAnalytics viewType='at-risk' />}

      {/* Plans Tab */}
      {activeTab === 'plans' && (
        <Card className='border border-white/10 bg-surface-800/50 backdrop-blur-sm'>
          <div className='flex items-center justify-between mb-6'>
            <h2
              className='text-xl font-bold text-text-primary'
              style={{ fontFamily: 'Space Grotesk, sans-serif' }}
            >
              Quản lý gói tập
            </h2>
            <Button variant='primary'>
              <Package className='h-4 w-4' strokeWidth={1.6} />
              Thêm gói tập mới
            </Button>
          </div>

          <div className='overflow-x-auto'>
            <table className='min-w-full divide-y divide-white/5 text-sm'>
              <thead>
                <tr className='text-left'>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Tên gói
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Loại
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Thời hạn
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Giá
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Trạng thái
                  </th>
                  <th
                    className='px-6 py-4 text-right text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Thao tác
                  </th>
                </tr>
              </thead>
              <tbody className='divide-y divide-white/5'>
                {plans.map(plan => (
                  <tr key={plan.id} className='transition-colors duration-200 hover:bg-surface-700/30'>
                    <td className='px-6 py-4'>
                      <div
                        className='font-bold text-text-primary'
                        style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                      >
                        {plan.name}
                      </div>
                      <div
                        className='text-xs font-medium text-text-secondary'
                        style={{ fontFamily: 'Inter, sans-serif' }}
                      >
                        {plan.description}
                      </div>
                    </td>
                    <td
                      className='px-6 py-4 font-medium text-text-secondary'
                      style={{ fontFamily: 'Inter, sans-serif' }}
                    >
                      {plan.type}
                    </td>
                    <td
                      className='px-6 py-4 font-medium text-text-secondary'
                      style={{ fontFamily: 'Inter, sans-serif' }}
                    >
                      {plan.duration_months} tháng
                    </td>
                    <td
                      className='px-6 py-4 font-bold text-color-success'
                      style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                    >
                      {formatCurrency(plan.price)}
                    </td>
                    <td className='px-6 py-4'>
                      <span
                        className={`inline-flex rounded-full border px-3 py-1 text-xs font-semibold ${
                          plan.is_active
                            ? 'border-color-success/40 bg-color-success/10 text-color-success'
                            : 'border-color-error/40 bg-color-error/10 text-color-error'
                        }`}
                        style={{ fontFamily: 'Inter, sans-serif' }}
                      >
                        {plan.is_active ? 'Hoạt động' : 'Tạm dừng'}
                      </span>
                    </td>
                    <td className='px-6 py-4 text-right'>
                      <div className='flex items-center justify-end gap-2'>
                        <Button variant='outline' size='sm'>
                          Sửa
                        </Button>
                        <Button variant='danger' size='sm'>
                          Xóa
                        </Button>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </Card>
      )}

      {/* Subscriptions Tab */}
      {activeTab === 'subscriptions' && (
        <Card className='border border-white/10 bg-surface-800/50 backdrop-blur-sm'>
          <h2
            className='mb-6 text-xl font-bold text-text-primary'
            style={{ fontFamily: 'Space Grotesk, sans-serif' }}
          >
            Quản lý đăng ký
          </h2>

          <div className='overflow-x-auto'>
            <table className='min-w-full divide-y divide-white/5 text-sm'>
              <thead>
                <tr className='text-left'>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Thành viên
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Gói tập
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Trạng thái
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Bắt đầu
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Kết thúc
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Tổng tiền
                  </th>
                  <th
                    className='px-6 py-4 text-right text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Thao tác
                  </th>
                </tr>
              </thead>
              <tbody className='divide-y divide-white/5'>
                {subscriptions.map(sub => (
                  <tr key={sub.id} className='transition-colors duration-200 hover:bg-surface-700/30'>
                    <td
                      className='px-6 py-4 font-mono text-xs text-text-secondary'
                      style={{ fontFamily: 'JetBrains Mono, monospace' }}
                    >
                      #{sub.member_id}
                    </td>
                    <td
                      className='px-6 py-4 font-bold text-text-primary'
                      style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                    >
                      {sub.plan.name}
                    </td>
                    <td className='px-6 py-4'>
                      <span
                        className={`inline-flex rounded-full border px-3 py-1 text-xs font-semibold ${
                          sub.status === 'ACTIVE'
                            ? 'border-color-success/40 bg-color-success/10 text-color-success'
                            : sub.status === 'CANCELLED'
                              ? 'border-color-error/40 bg-color-error/10 text-color-error'
                              : 'border-color-warning/40 bg-color-warning/10 text-color-warning'
                        }`}
                        style={{ fontFamily: 'Inter, sans-serif' }}
                      >
                        {sub.status}
                      </span>
                    </td>
                    <td
                      className='px-6 py-4 text-sm font-medium text-text-secondary'
                      style={{ fontFamily: 'Inter, sans-serif' }}
                    >
                      {formatDate(sub.start_date)}
                    </td>
                    <td
                      className='px-6 py-4 text-sm font-medium text-text-secondary'
                      style={{ fontFamily: 'Inter, sans-serif' }}
                    >
                      {formatDate(sub.end_date)}
                    </td>
                    <td
                      className='px-6 py-4 font-bold text-color-success'
                      style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                    >
                      {formatCurrency(sub.total_amount)}
                    </td>
                    <td className='px-6 py-4 text-right'>
                      {sub.status === 'ACTIVE' && (
                        <Button variant='danger' size='sm'>
                          Hủy
                        </Button>
                      )}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </Card>
      )}

      {/* Payments Tab */}
      {activeTab === 'payments' && (
        <Card className='border border-white/10 bg-surface-800/50 backdrop-blur-sm'>
          <h2
            className='mb-6 text-xl font-bold text-text-primary'
            style={{ fontFamily: 'Space Grotesk, sans-serif' }}
          >
            Lịch sử thanh toán
          </h2>

          <div className='overflow-x-auto'>
            <table className='min-w-full divide-y divide-white/5 text-sm'>
              <thead>
                <tr className='text-left'>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Mã thanh toán
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Thành viên
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Số tiền
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Phương thức
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Trạng thái
                  </th>
                  <th
                    className='px-6 py-4 text-xs font-bold uppercase tracking-wider text-text-muted'
                    style={{ fontFamily: 'Inter, sans-serif' }}
                  >
                    Ngày
                  </th>
                </tr>
              </thead>
              <tbody className='divide-y divide-white/5'>
                {payments.map(payment => (
                  <tr key={payment.id} className='transition-colors duration-200 hover:bg-surface-700/30'>
                    <td
                      className='px-6 py-4 font-mono text-xs text-text-secondary'
                      style={{ fontFamily: 'JetBrains Mono, monospace' }}
                    >
                      #{payment.id.substring(0, 8)}...
                    </td>
                    <td
                      className='px-6 py-4 font-mono text-xs text-text-secondary'
                      style={{ fontFamily: 'JetBrains Mono, monospace' }}
                    >
                      #{payment.member_id}
                    </td>
                    <td
                      className='px-6 py-4 font-bold text-color-success'
                      style={{ fontFamily: 'Space Grotesk, sans-serif' }}
                    >
                      {formatCurrency(payment.amount)}
                    </td>
                    <td
                      className='px-6 py-4 font-medium text-text-secondary'
                      style={{ fontFamily: 'Inter, sans-serif' }}
                    >
                      {payment.payment_method}
                    </td>
                    <td className='px-6 py-4'>
                      <span
                        className={`inline-flex rounded-full border px-3 py-1 text-xs font-semibold ${
                          payment.status === 'COMPLETED'
                            ? 'border-color-success/40 bg-color-success/10 text-color-success'
                            : payment.status === 'FAILED'
                              ? 'border-color-error/40 bg-color-error/10 text-color-error'
                              : 'border-color-warning/40 bg-color-warning/10 text-color-warning'
                        }`}
                        style={{ fontFamily: 'Inter, sans-serif' }}
                      >
                        {payment.status}
                      </span>
                    </td>
                    <td
                      className='px-6 py-4 text-sm font-medium text-text-secondary'
                      style={{ fontFamily: 'Inter, sans-serif' }}
                    >
                      {formatDate(payment.created_at)}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </Card>
      )}
    </div>
  );
}
