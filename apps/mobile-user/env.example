# ============================================
# MOBILE APP - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env files to version control
#
# Note: Expo requires EXPO_PUBLIC_ prefix for environment variables
# that should be exposed to the app

# ============================================
# API CONFIGURATION (REQUIRED)
# ============================================
# Base URL for API Gateway
# For local development (same WiFi):
#   - Find your computer IP: ipconfig (Windows) or ifconfig (Mac/Linux)
#   - Use: http://[YOUR_IP]:8080
# For Android emulator: http://10.0.2.2:8080
# For iOS simulator: http://localhost:8080
# For production: https://api.yourdomain.com
EXPO_PUBLIC_API_BASE_URL=http://localhost:8080

# Alternative: You can also use EXPO_PUBLIC_API_URL
# EXPO_PUBLIC_API_URL=http://localhost:8080

# ============================================
# APP CONFIGURATION (OPTIONAL)
# ============================================
# App name (default: 'Gym147')
EXPO_PUBLIC_APP_NAME=Gym147

# App version (default: '1.0.0')
EXPO_PUBLIC_APP_VERSION=1.0.0

# Environment: 'development' | 'staging' | 'production' (default: 'development')
EXPO_PUBLIC_ENVIRONMENT=development

# ============================================
# THIRD-PARTY API KEYS (OPTIONAL)
# ============================================
# YouTube API Key for exercise video tutorials
# Get from: https://console.cloud.google.com/apis/credentials
EXPO_PUBLIC_YOUTUBE_API_KEY=your-youtube-api-key

# Google OAuth Client ID (for Google Sign-In)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Facebook App ID (for Facebook Sign-In)
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# Vietnam Address API Configuration
# Base URL for Vietnam address API (default: http://tinhthanhpho.com/api/v1)
EXPO_PUBLIC_PROVINCES_API_URL=http://tinhthanhpho.com/api/v1

# API Key for Vietnam address API (if required)
EXPO_PUBLIC_PROVINCES_API_KEY=your-provinces-api-key

# ============================================
# NOTES
# ============================================
# 1. All variables starting with EXPO_PUBLIC_ are exposed to the app
# 2. Never commit .env files with real API keys
# 3. For production, use HTTPS URLs
# 4. You can also set these in app.json under "extra" section
# 5. Priority: process.env > app.json extra > defaults
