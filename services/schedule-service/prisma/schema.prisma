// Schedule Service Prisma Schema - Gym Management
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trainer {
  id               String          @id @default(cuid())
  user_id          String          @unique // Reference to identity service
  full_name        String
  phone            String          @unique
  email            String          @unique
  specializations  ClassCategory[] // Array of specializations - now uses enum
  bio              String?
  experience_years Int             @default(0)
  hourly_rate      Decimal?        @db.Decimal(10, 2)
  profile_photo    String?
  status           TrainerStatus   @default(ACTIVE)

  // Performance tracking
  rating_average Float? @default(0)
  total_classes  Int    @default(0)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  schedules            Schedule[]
  certifications       TrainerCertification[]
  room_change_requests RoomChangeRequest[]

  @@map("trainers")
}

model GymClass {
  id               String        @id @default(cuid())
  name             String
  description      String?
  category         ClassCategory
  duration         Int // minutes
  max_capacity     Int           @default(20)
  difficulty       Difficulty
  equipment_needed String[] // Required equipment list

  // Pricing
  price Decimal? @db.Decimal(10, 2)

  // Media
  thumbnail String?

  // Certification requirements
  required_certification_level CertificationLevel @default(BASIC)

  // Vector Embedding for Semantic Search (1536 dimensions - OpenAI text-embedding-ada-002)
  class_embedding Unsupported("vector(1536)")? // Class description vector embedding

  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  schedules Schedule[]

  @@map("gym_classes")
}

model Room {
  id        String   @id @default(cuid())
  name      String   @unique
  capacity  Int
  area_sqm  Float? // Room area in square meters
  equipment String[] // Available equipment
  amenities String[] // ["MIRRORS", "PROJECTOR", "SOUND_SYSTEM"]

  status            RoomStatus @default(AVAILABLE)
  maintenance_notes String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  schedules Schedule[]

  @@map("rooms")
}

model Schedule {
  id         String  @id @default(cuid())
  class_id   String
  trainer_id String?
  room_id    String

  // Scheduling details
  start_time DateTime // Full datetime
  end_time   DateTime // Full datetime

  // Class status and capacity
  status               ScheduleStatus @default(SCHEDULED)
  current_bookings     Int            @default(0)
  max_capacity         Int // Can override class default
  minimum_participants Int? // Minimum participants required, null = no minimum
  waitlist_count       Int            @default(0)

  // Check-in/Check-out management
  check_in_enabled        Boolean   @default(false)
  check_in_opened_at      DateTime?
  check_in_opened_by      String? // trainer_id
  auto_checkout_completed Boolean   @default(false)
  auto_checkout_at        DateTime?

  // Pricing override
  price_override Decimal? @db.Decimal(10, 2)
  special_notes  String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  gym_class            GymClass            @relation(fields: [class_id], references: [id], onDelete: Cascade)
  trainer              Trainer?            @relation(fields: [trainer_id], references: [id], onDelete: SetNull)
  room                 Room                @relation(fields: [room_id], references: [id], onDelete: Restrict)
  bookings             Booking[]
  attendance           Attendance[]
  room_change_requests RoomChangeRequest[]

  // Note: Trainer certification validation will be handled by application logic
  // or database triggers to ensure trainer can teach the class category

  @@map("schedules")
}

model Booking {
  id          String @id @default(cuid())
  schedule_id String
  member_id   String // Reference to member service

  // Booking details
  status              BookingStatus @default(CONFIRMED)
  booked_at           DateTime      @default(now())
  cancelled_at        DateTime?
  cancellation_reason String?

  // Payment
  payment_status String   @default("PENDING") // PENDING, PAID, REFUNDED, FAILED, COMPLETED
  amount_paid    Decimal? @db.Decimal(10, 2)

  // Special requirements
  special_needs     String? // Accessibility, equipment needs
  is_waitlist       Boolean @default(false)
  waitlist_position Int?

  notes      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  schedule Schedule @relation(fields: [schedule_id], references: [id], onDelete: Cascade)

  @@unique([schedule_id, member_id])
  @@map("bookings")
}

model Attendance {
  id          String @id @default(cuid())
  schedule_id String
  member_id   String // Reference to member service

  // Attendance tracking
  checked_in_at     DateTime?
  checked_out_at    DateTime?
  attendance_method AttendanceMethod @default(MANUAL)

  // Check-in/Check-out method tracking
  is_auto_checkout Boolean        @default(false)
  check_in_method  CheckInMethod  @default(SELF)
  check_out_method CheckOutMethod @default(SELF)

  // Feedback
  class_rating   Int? // 1-5 stars
  trainer_rating Int? // 1-5 stars
  feedback_notes String?
  trainer_reply  String? // Trainer's reply to feedback

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  schedule Schedule @relation(fields: [schedule_id], references: [id], onDelete: Cascade)

  @@unique([schedule_id, member_id])
  @@map("attendance")
}

model MemberFavorite {
  id            String       @id @default(cuid())
  member_id     String
  favorite_type FavoriteType // CLASS, TRAINER
  favorite_id   String // class_id hoặc trainer_id
  created_at    DateTime     @default(now())

  @@unique([member_id, favorite_type, favorite_id])
  @@map("member_favorites")
}

model RoomChangeRequest {
  id                String        @id @default(cuid())
  schedule_id       String
  trainer_id        String
  current_room_id   String
  requested_room_id String?
  reason            String
  waitlist_count    Int
  status            RequestStatus @default(PENDING)
  admin_notes       String?
  created_at        DateTime      @default(now())
  updated_at        DateTime      @updatedAt

  schedule Schedule @relation(fields: [schedule_id], references: [id])
  trainer  Trainer  @relation(fields: [trainer_id], references: [id])

  @@map("room_change_requests")
}

// Enums
enum TrainerStatus {
  ACTIVE
  INACTIVE
  ON_LEAVE
  TERMINATED
}

enum ClassCategory {
  CARDIO
  STRENGTH
  YOGA
  PILATES
  DANCE
  MARTIAL_ARTS
  AQUA
  FUNCTIONAL
  RECOVERY
  SPECIALIZED
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  ALL_LEVELS
}

enum RoomStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
  CLEANING
  RESERVED
}

enum ScheduleStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  POSTPONED
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  WAITLIST
  NO_SHOW
  COMPLETED
}

enum AttendanceMethod {
  MANUAL
  QR_CODE
  MOBILE_APP
}

model TrainerCertification {
  id                   String             @id @default(cuid())
  trainer_id           String
  category             ClassCategory // CARDIO, STRENGTH, YOGA, etc.
  certification_name   String
  certification_issuer String
  certification_level  CertificationLevel @default(BASIC)

  // Dates
  issued_date     DateTime
  expiration_date DateTime?

  // Verification
  verification_status VerificationStatus @default(PENDING)
  verified_by         String? // Admin user_id
  verified_at         DateTime?
  rejection_reason    String?

  // File storage
  certificate_file_url  String?
  certificate_file_type String? // PDF, JPG, PNG

  // Status
  is_active Boolean @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  trainer Trainer @relation(fields: [trainer_id], references: [id], onDelete: Cascade)

  // Note: Removed unique constraint on (trainer_id, category) to allow multiple certifications
  // for the same category (e.g., different levels, issuers, or expiration dates)
  // Application logic handles prioritization and deactivation of old certifications
  @@index([trainer_id])
  @@index([category])
  @@index([verification_status])
  @@index([expiration_date])
  @@index([trainer_id, category]) // Composite index for efficient queries
  @@map("trainer_certifications")
}

// Database triggers để tự động cập nhật specializations
// Trigger sẽ được tạo thông qua migration SQL

enum CertificationLevel {
  BASIC
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
  EXPIRED
  SUSPENDED
}

// Notification model removed - now centralized in Identity Service

enum FavoriteType {
  CLASS
  TRAINER
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CheckInMethod {
  SELF
  TRAINER_MANUAL
}

enum CheckOutMethod {
  SELF
  TRAINER_MANUAL
  AUTO
}
